<!-- 
Scope for force/torque sensors in the legs of iCub 
Author: Serena Ivaldi 

This xml file must be used with yarpscope: it plots by columns the forces and moments of the 6 axis F/T sensors of the iCub legs, i.e. the ones in the middle of the legs and the ones at the feet. -->

<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="2" columns="4" carrier="udp" persistent="0">

<!-- RIGHT LEG -->

    <plot gridx="0"
          gridy="0"
          hspan="1"
          vspan="1"
          title="FTS right leg - forces"
          minval="-200"
          maxval="200"
          bgcolor="#ccFFcc">
        <graph remote="/icub/right_leg/analog:o"
               index="0"
               color="Red"
               title="F1"
               type="lines"
               size="2" />
        <graph remote="/icub/right_leg/analog:o"
               index="1"
               color="Green"
               title="F2"
               size="2"
               type="lines" />
        <graph remote="/icub/right_leg/analog:o"
               index="2"
               color="Blue"
               title="F3"
               size="2"
               type="lines" />
    </plot>
    
    <plot gridx="0"
          gridy="1"
          hspan="1"
          vspan="1"
          title="FTS right leg - moments"
          minval="-15"
          maxval="15"
          bgcolor="#ddFFdd">
        <graph remote="/icub/right_leg/analog:o"
               index="3"
               color="Red"
               title="M1"
               type="lines" />
        <graph remote="/icub/right_leg/analog:o"
               index="4"
               color="Green"
               title="M2"
               type="lines" />
        <graph remote="/icub/right_leg/analog:o"
               index="5"
               color="Blue"
               title="M3"
               type="lines" />
    </plot>
    
