<!-- 
Scope for the joint torques in the legs of iCub 
Author: Serena Ivaldi 

This xml file must be used with yarpscope: it plots by columns the joint torques of the iCub legs. -->

<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="2" columns="3" carrier="udp" persistent="0">

<!-- RIGHT LEG -->

    <plot gridx="0"
          gridy="0"
          hspan="1"
          vspan="1"
          title="Forces FTS leg - offset"
          minval="-5"
          maxval="5"
          bgcolor="White">
        <graph remote="/tmp/FT"
               index="0"
               color="Red"
               type="lines"
               size="2" />

        <graph remote="/tmp/FT"
               index="1"
               color="Green"
               type="lines"
               size="2" />

        <graph remote="/tmp/FT"
               index="2"
               color="Blue"
               type="lines"
               size="2" />
    </plot>

    <plot gridx="0"
          gridy="1"
          hspan="1"
          vspan="1"
          title="Moments FTS leg - offset"
          minval="-5"
          maxval="5"
          bgcolor="White">
        <graph remote="/tmp/FT"
               index="3"
               color="Red"
               type="lines"
               size="2" />

        <graph remote="/tmp/FT"
               index="4"
               color="Green"
               type="lines"
               size="2" />

        <graph remote="/tmp/FT"
               index="5"
               color="Blue"
               type="lines"
               size="2" />
    </plot>
    
  
    
</portscope>
