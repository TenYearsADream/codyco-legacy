<!-- 
Scope for the joint torques in the legs of iCub 
Author: Serena Ivaldi 

This xml file must be used with yarpscope: it plots by columns the joint torques of the iCub legs. -->

<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="2" columns="3" carrier="udp" persistent="0">

<!-- RIGHT LEG -->

    <plot gridx="0"
          gridy="0"
          hspan="1"
          vspan="1"
          title="Joint 0 (blue=Right red=Left)"
          minval="-5"
          maxval="5"
          bgcolor="White">
        <graph remote="/wholeBodyDynamics/right_leg/Torques:o"
               index="1"
               color="Blue"
               type="lines"
               size="2" />
        <graph remote="/wholeBodyDynamics/left_leg/Torques:o"
               index="1"
               color="Red"
               size="2"
               type="lines" />
    </plot>
    
    <plot gridx="1"
          gridy="0"
          hspan="1"
          vspan="1"
          title="Joint 1 (blue=Right red=Left)"
          minval="-5"
